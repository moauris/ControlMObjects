<Window x:Class="ControlM_Manager_GUI.View.MachinePickerTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlM_Manager_GUI.View"
        mc:Ignorable="d"
        Title="MachinePickerTestWindow" Height="450" Width="800"
        FontSize="22"
        FontFamily="Microsoft Yahei UI">
    <Grid Margin="70" Height="70">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="写入新的机器信息" Click="OnWriteNewMachine"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="机器信息"/>
        <Button Grid.Column="2" Grid.Row="1" Content="选择机器" Margin="0 0 2 0" Click="OnPickMachineClicked"/>
    </Grid>
</Window>
